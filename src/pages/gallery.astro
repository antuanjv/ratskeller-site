---
import Layout from '../layouts/Layout.astro';
const images = [
  'https://images.unsplash.com/photo-1504674900247-0877df9cc836?auto=format&fit=crop&w=800&q=60',
  'https://images.unsplash.com/photo-1600891964599-f61ba0e24092?auto=format&fit=crop&w=800&q=60',
  'https://images.unsplash.com/photo-1555396273-367ea4eb4db5?auto=format&fit=crop&w=800&q=60'
];
---
<Layout title="Bilder – Ratskeller Saarbrücken">
  <section class="py-20 px-4 max-w-6xl mx-auto">
    <h1 class="text-4xl font-bold mb-8 text-center">Impressionen</h1>
    <div class="grid md:grid-cols-3 gap-4">
      {images.map(src => (
        <img class="rounded shadow" src={src} alt="Restaurant ambience" />
      ))}
    </div>
  </section>
</Layout>
