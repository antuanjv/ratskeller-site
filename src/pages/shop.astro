---
import Layout from '../layouts/Layout.astro';
---
<Layout title="Shop – Gutscheine & Merch">
  <section class="py-20 px-4 max-w-2xl mx-auto">
    <h1 class="text-4xl font-bold mb-6">Gutscheine & Geschenke</h1>
    <div class="bg-white rounded shadow p-6">
      <h2 class="text-xl font-bold mb-2">Gutschein 25 €</h2>
      <p class="mb-4">Perfekt zum Verschenken – direkt per E-Mail.</p>
      <form action="https://buy.stripe.com/..." method="POST">
        <button class="bg-brand-gold text-brand-dark px-6 py-3 rounded">Jetzt kaufen</button>
      </form>
    </div>
  </section>
</Layout>
