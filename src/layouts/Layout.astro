---
export interface Props { title: string }
const { title } = Astro.props;
---
<!doctype html>
<html lang="de">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{title}</title>
  <meta name="description" content="Traditionelle deutsche Hausmannskost im Herzen Saarbrückens – Mo–Sa ab 17:00 Uhr" />
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet" />
</head>
<body class="font-body text-brand-dark bg-brand-cream">
  <slot />
</body>
</html>
<style>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;
</style>
